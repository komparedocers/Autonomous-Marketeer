# ============================================
# AUTONOMOUS MARKETEER - ENVIRONMENT CONFIG
# ============================================

# ----------------
# Application
# ----------------
APP_NAME=Autonomous Marketeer
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ----------------
# API Configuration
# ----------------
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4
PUBLIC_API_HOST=http://localhost:8080

# ----------------
# Frontend Configuration
# ----------------
WEBAPP_HOST=0.0.0.0
WEBAPP_PORT=5173
VITE_API_URL=http://localhost:8080

# ----------------
# Database (PostgreSQL)
# ----------------
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=agentic
POSTGRES_USER=postgres
POSTGRES_PASSWORD=example_change_me
POSTGRES_DSN=postgresql+psycopg://postgres:example_change_me@db:5432/agentic

# ----------------
# ClickHouse (Analytics)
# ----------------
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_DB=analytics
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_URL=http://clickhouse:8123

# ----------------
# Redis (Cache & Queue)
# ----------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0
REDIS_CELERY_BROKER_DB=0
REDIS_CELERY_BACKEND_DB=1

# ----------------
# MinIO (S3 Storage)
# ----------------
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123
MINIO_BUCKET_ASSETS=assets
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123
MINIO_SECURE=false

# ----------------
# LLM Configuration
# ----------------
# LLM Provider: 'openai', 'local', 'both'
LLM_PROVIDER=local
LLM_DEFAULT_PROVIDER=local

# OpenAI Configuration
OPENAI_ENABLED=false
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Local LLM Configuration (vLLM)
LOCAL_LLM_ENABLED=true
LOCAL_LLM_HOST=llmrouter
LOCAL_LLM_PORT=9090
LOCAL_LLM_URL=http://llmrouter:9090
LOCAL_LLM_MODEL=mistralai/Mistral-7B-Instruct-v0.2
LOCAL_LLM_MAX_TOKENS=4000
LOCAL_LLM_TEMPERATURE=0.7
LOCAL_LLM_GPU_MEMORY_UTILIZATION=0.9

# LLM Router Configuration
LLM_ROUTER_HOST=0.0.0.0
LLM_ROUTER_PORT=9090
LLM_CACHE_ENABLED=true
LLM_CACHE_TTL=3600
LLM_MODERATION_ENABLED=true

# ----------------
# Attribution Service
# ----------------
ATTRIBUTION_HOST=0.0.0.0
ATTRIBUTION_PORT=8085
ATTRIBUTION_SESSION_TIMEOUT=1800
ATTRIBUTION_DEFAULT_MODEL=last_touch

# ----------------
# Analytics Service
# ----------------
ANALYTICS_HOST=0.0.0.0
ANALYTICS_PORT=8086
ANALYTICS_RETENTION_DAYS=400

# ----------------
# Celery Configuration
# ----------------
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=1800
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=100

# ----------------
# Security
# ----------------
JWT_SECRET=change-me-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400
SECRET_KEY=another-secure-random-string-change-in-production
ENCRYPTION_KEY=32-byte-base64-encoded-key-for-fernet-encryption

# ----------------
# CORS Configuration
# ----------------
CORS_ORIGINS=http://localhost:5173,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# ----------------
# OAuth & Channel Connectors
# ----------------
# Google Ads
GOOGLE_ADS_ENABLED=false
GOOGLE_ADS_CLIENT_ID=your-google-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-client-secret
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token

# Meta (Facebook/Instagram)
META_ENABLED=false
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret

# LinkedIn
LINKEDIN_ENABLED=false
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# TikTok
TIKTOK_ENABLED=false
TIKTOK_APP_ID=your-tiktok-app-id
TIKTOK_APP_SECRET=your-tiktok-app-secret

# X (Twitter)
X_ENABLED=false
X_API_KEY=your-x-api-key
X_API_SECRET=your-x-api-secret

# YouTube
YOUTUBE_ENABLED=false
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# Reddit
REDDIT_ENABLED=false
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret

# Email
EMAIL_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@agentmama.ai

# ----------------
# Monitoring & Observability
# ----------------
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9091
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ----------------
# Billing (Stripe)
# ----------------
STRIPE_ENABLED=false
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# ----------------
# Rate Limiting
# ----------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ----------------
# Feature Flags
# ----------------
FEATURE_AB_TESTING=true
FEATURE_MULTI_ARMED_BANDITS=true
FEATURE_AUTO_OPTIMIZATION=true
FEATURE_AGENT_APPROVALS=true
FEATURE_AUDIT_LOGS=true

# ----------------
# Agent Configuration
# ----------------
AGENT_CREATIVE_ENABLED=true
AGENT_COMPLIANCE_ENABLED=true
AGENT_PLANNER_ENABLED=true
AGENT_BUDGET_PACER_ENABLED=true
AGENT_OPTIMIZER_ENABLED=true
AGENT_ANALYST_ENABLED=true

# ----------------
# Default Tenant (for development)
# ----------------
DEFAULT_TENANT_NAME=Demo Company
DEFAULT_TENANT_EMAIL=admin@demo.com
DEFAULT_TENANT_PASSWORD=demo123
